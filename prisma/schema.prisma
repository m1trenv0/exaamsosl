generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model exams {
  id                   String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title                String               @default("Exam") @db.VarChar(255)
  is_active            Boolean              @default(true)
  chat_question_index  Int?
  chat_question_text   String?              @db.Text
  created_at           DateTime             @default(now()) @db.Timestamptz(6)
  chat_messages        chat_messages[]
  participant_answers  participant_answers[]
  questions            questions[]
}

model questions {
  id                   String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  exam_id              String               @db.Uuid
  order_index          Int
  question_text        String               @db.Text
  question_type        String               @db.VarChar(50)
  options              Json?
  metadata             Json?
  created_at           DateTime             @default(now()) @db.Timestamptz(6)
  exams                exams                @relation(fields: [exam_id], references: [id], onDelete: Cascade)
  participant_answers  participant_answers[]

  @@index([exam_id])
}

model chat_messages {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  exam_id     String   @db.Uuid
  message     String   @db.Text
  is_admin    Boolean  @default(false)
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  exams       exams    @relation(fields: [exam_id], references: [id], onDelete: Cascade)

  @@index([exam_id])
}

model participant_answers {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  exam_id      String    @db.Uuid
  question_id  String    @db.Uuid
  answer_text  String?   @db.Text
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  updated_at   DateTime  @default(now()) @db.Timestamptz(6)
  exams        exams     @relation(fields: [exam_id], references: [id], onDelete: Cascade)
  questions    questions @relation(fields: [question_id], references: [id], onDelete: Cascade)

  @@unique([exam_id, question_id])
  @@index([exam_id])
  @@index([question_id])
}

model users {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email      String   @unique @db.VarChar(255)
  password   String   @db.VarChar(255)
  name       String?  @db.VarChar(255)
  role       String   @default("admin") @db.VarChar(50)
  created_at DateTime @default(now()) @db.Timestamptz(6)
}
